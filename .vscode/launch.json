    "version": "0.2.0",
    "configurations": [{
            "name": "Launch Client Side",
            "type": "chrome",
            "request": "launch",
            "file": "${workspaceRoot}/index.html",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}"
        },
        {
            "name": "Launch Server Side",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost/index.html",
            "sourceMaps": true,
            "webRoot": "wwwroot"
        }
        ]
}